{
    "categories": [
        {
            "title": "## Features",
            "labels": ["feature"]
        },
        {
            "title": "## Fixes",
            "labels": ["fix"]
        },
        {
            "title": "## Performance",
            "labels": ["performance"]
        },
        {
            "title": "## Tests",
            "labels": ["test"]
        },
        {
            "title": "## Chores",
